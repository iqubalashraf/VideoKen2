<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:minHeight="50dp"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/textViewNoteTimeStatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOTE TIME-"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:textSize="15sp"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/textViewNoteTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/textViewNoteTimeStatic"
        android:layout_toRightOf="@id/textViewNoteTimeStatic"
        android:text="05:22"
        android:textSize="15sp"
        android:padding="5dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/textViewNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNoteTimeStatic"
        android:text="this is the note"
        android:textSize="14sp"
        android:padding="5dp"
        android:textColor="@android:color/black"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@id/textViewNote"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

    </RelativeLayout>
</RelativeLayout>
