<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/textViewNoteTimeStatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOTE TIME-"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:textSize="15sp"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/textViewNoteTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/textViewNoteTimeStatic"
        android:layout_toRightOf="@id/textViewNoteTimeStatic"
        android:text="05:22"
        android:textSize="15sp"
        android:padding="5dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/textViewDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="02:22"
        android:textSize="15sp"
        android:padding="5dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/textViewDurationStatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DURATION-"
        android:layout_toLeftOf="@id/textViewDuration"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:textSize="15sp"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/buttonPlayPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:text="Play"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@id/textViewNoteTimeStatic"
        android:background="@drawable/button_shape_join_now_events"
        android:gravity="center" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@id/buttonPlayPause"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

    </RelativeLayout>
</RelativeLayout>
